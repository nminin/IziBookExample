<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IziBookExample" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="titleTextAppearance">@style/TextAppearanceTitle</item>
        <item name="subtitleTextAppearance">@style/TextAppearanceSubtitle</item>
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="TextAppearanceTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_title_size</item>
    </style>
    <style name="TextAppearanceSubtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textSize">@dimen/text_subtitle_size</item>
    </style>

</resources>